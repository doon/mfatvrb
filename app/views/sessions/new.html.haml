!!!
%html{lang: :en}
  %head
    %meta{ charset: "utf-8"}
    %meta{'http-equiv' => "X-UA-Compatible", content: "IE=edge"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    = csrf_meta_tags
    %title Bunny Login
    =stylesheet_link_tag "application", media: "all"
    =favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
  %body
    .container
      .row
        .col-md-4.col-md-offset-4
          .login-panel.panel.panel-default
            =bootstrap_flash
            .panel-heading
              %h3.panel-title Bunny Login
            .panel-body
              =form_tag sessions_path do
                %fieldset
                  .form-group
                    =text_field_tag :email, params[:email], placeholder: 'Email', class: 'form-control', autofocus: true
                  .form-group
                    =password_field_tag :password,'', placeholder: 'Password', class: 'form-control'
                  .checkbox
                    %label
                      =check_box_tag :remember_me, 1, params[:remember_me]
                      Keep Me Logged In
                  %button.btn.btn-large.btn-primary.btn-block{type: 'submit'}
                    Login
    =javascript_include_tag "application"
